CC = gcc
SRC = school.c main.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

school.o: school.c
	$(CC) $(CFLAGS) -c -o $@ $<

main.o: main.c
	$(CC) $(CFLAGS) -c -o $@ $<

.PHONY: clean oclean fclean re
clean:
	$(RM) *~

oclean:
	$(RM) $(OBJ) $(NAME)

fclean:
	$(MAKE) clean
	$(MAKE) oclean

re:
	$(RM) $(OBJ)
	$(CC) $(CFLAGS) -c $(SRC)
