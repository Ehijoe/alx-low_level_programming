CC = gcc
SRC = school.c main.c
OBJ = $(SRC:%.c=%.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: clean oclean fclean re all

all: $(OBJ)
	ifneq ("$(wildcard m.h","")
		$(CC) $(OBJ) -o $(NAME)
	endif

clean:
	$(RM) *~

oclean:
	$(RM) $(OBJ) $(NAME)

fclean:
	$(MAKE) clean
	$(MAKE) oclean

re:
	$(MAKE) oclean
	$(MAKE) all
